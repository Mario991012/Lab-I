@model IEnumerable<Lab_1.Models.Trabajadores>

@{
    ViewBag.Title = "Index";
}

<h1>EMPLEADOS REGISTRADOS</h1>
<h4>MENÚ PRINCIPAL</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HorasTrabajadas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sueldoFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Citas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Llegada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoolOficina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HorasTrabajadas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sueldoFinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Citas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Llegada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoolOficina)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Registrar trabajador", "Create")<br />
</p>

<ol>
    @*SIMULACIONES*@
    <li><h3>SIMULACIONES</h3>
       <ul>
           <li>
               @Html.ActionLink("Simular salida", "Salida")
           </li>
           <li>
               @Html.ActionLink("Simular entrada", "Entrada")
           </li>
       </ul>
    </li>
    <li>
        <h3>PILA</h3>
        <ul>
            <li>
                <button type="button" onclick="location.href = '@Url.Action("Index", "Pila")'">Ir a Pila</button>
            </li>
        </ul>
    </li>
    <li>
        @*BARRAS DE BUSQUEDA*@
        <h3>BUSQUEDA</h3>
        
        <ul>
            @using (Html.BeginForm("Resultados", "Trabajadores", FormMethod.Post))
            {
                <input type="text" name="nombre" id="nombre" />

                <input type="submit" value="Buscar por nombre" />
            }
        </ul>
        <ul>
            @using (Html.BeginForm("Resultados", "Trabajadores", FormMethod.Post))
            {
                <input type="text" name="codigo" id="id" />

                <input type="submit" value="Buscar por Código" />
            }
        </ul>
        <ul>
            @using (Html.BeginForm("Resultados", "Trabajadores", FormMethod.Post))
            {
                <input type="text" name="disp" id="disp" />

                <input type="submit" value="Verificar si se encuentra en oficina" />
                <h6>Disponible = "true", No disponible = "false"</h6>
            }
        </ul>
        <ul>
            @using (Html.BeginForm("Resultados", "Trabajadores", FormMethod.Post))
            {
                <input type="text" name="horas" id="horas" />

                <input type="submit" value="Buscar por horas trabajadas" />
            }
        </ul>
    </li>
</ol>

<tr>
    
</tr>

